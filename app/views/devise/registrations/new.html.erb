<div class="bg">
  <div class="box">
    <div class="box-inner">
      <h1>新規登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="box-name">
          <%= f.label :handle_name, "ハンドルネーム" %>
          <%= f.text_field :handle_name %>
        </div>

        <div class="box-email">
          <%= f.label :email, "Eメール" %>
          <%= f.email_field :email %>
        </div>

        <div class="box-password">
          <%= f.label :password, "パスワード (6 characters minimum)" %>
          <%= f.password_field :password %>
        </div>

        <div class="box-password">
          <%= f.label :password_confirmation, "パスワード（確認）" %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="box-login">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <div class="box-newusr">
        <p>既に登録されていますか？</p>
        <%= link_to "ログイン", new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
