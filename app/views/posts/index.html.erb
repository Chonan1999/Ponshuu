<% if @user.present? %>
<% if @user == current_user %>
    <h1>自分の投稿一覧</h1>
  <% else %>
    <h1><%= @user.handle_name %>さんの投稿一覧</h1>
  <% end %>
<% else %>
  <h1>投稿一覧</h1>
<% end %>

<% @posts.each do |post| %>
  <span><%= link_to post.name, post_path(post) %></span>
  <p>日本酒名: <%= post.name %></p>
  <p>感想: <%= post.text %></p>

    <%= attachment_image_tag post, :image, format: 'jpeg', size: '100x100' %>
  <% end %>

  <%= link_to "マイページに戻る", user_path(current_user) %>

