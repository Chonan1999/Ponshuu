<body class="posts-index">
  <h1>下書き一覧</h1>

  <div class="post-list">
    <% @drafts.each do |post| %>
      <div class="post-card">
        <%= link_to post_path(post) do %>
          <!-- 画像部分 -->
          <div class="post-image">
              <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200', class: 'card-img' %>
          </div>

          <!-- 投稿内容部分 -->
          <div class="post-content">
            <h3><%= truncate(post.name, length: 30) %></h3>
            <p><%= truncate(post.text, length: 100) %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= paginate @drafts %>

  <div class="d-flex justify-content-center">
    <%= link_to "新規投稿ページへ戻る", new_post_path, class: "btn btn-secondary" %>
  </div>
</body>
