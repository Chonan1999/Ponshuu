<h1><%= @user.handle_name %> さんのマイページ</h1>

<div>
  <%= attachment_image_tag @user, :profile_image, size: "150x150" %>
</div>

<div>
  <p><strong>自己紹介:</strong> <%= @user.profile %></p>
</div>

<div>
  フォロー数：<span id="followings-count">
    <%= link_to "#{current_user.followings.count}人", followings_user_path(current_user) %>
  </span>
 </div>
<div>
  フォロワー数：<span id="followers-count">
    <%= link_to "#{@user.followers.count}人", followers_user_path(@user) %>
  </span>
</div>

<% if current_user == @user %>
  <!-- 自分のマイページのみ表示 -->
  <%= link_to "日本酒を探す", search_posts_path, class: "button" %>
  <%= link_to "プロフィールを編集する", edit_user_path(@user), class: "button" %>
  <%= link_to "新規投稿へ", new_post_path, class: "button" %>
<% else %>
  <!-- 自分以外のユーザーに表示 -->
  <div id="follow-button">
    <% if current_user.following?(@user) %>
      <%= button_to "フォローを外す", relationship_path(current_user.active_relationships.find_by(followed_id: @user.id)), 
                    method: :delete, remote: true, class: "btn btn-danger", data: { turbo: false } %>
    <% else %>
      <%= button_to "フォローする", relationships_path(followed_id: @user.id), 
                    method: :post, remote: true, class: "btn btn-primary", data: { turbo: false } %>
    <% end %>
  </div>
<% end %>

<h2>最新の投稿</h2>
<div>
  <% @recent_posts.each do |post| %>
    <div>
      <%= link_to post_path(post) do %>
        <p><%= truncate(post.text, length: 100) %></p>
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "投稿一覧へ", posts_user_path(@user), class: "button" %>
</div>

<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
