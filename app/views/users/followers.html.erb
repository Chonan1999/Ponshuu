<div class="user-list container mt-5">
  <div class="row justify-content-center">
    <h1 class="text-center"><%= @user.handle_name %> さんのフォロー</h1>
  </div>
  <div class="row justify-content-center mt-4">
    <% @users.each do |user| %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card shadow-sm h-100">
          <%= link_to user_path(user), class: "text-decoration-none text-dark" do %>
            <!-- プロフィール画像 -->
            <div class="card-header text-center bg-light">
              <%= attachment_image_tag user, :profile_image, size: '80x80', fallback: "no_image.svg", class: "rounded-circle profile-img" %>
            </div>
            <!-- ユーザー情報 -->
            <div class="card-body text-center">
              <h5 class="card-title"><%= user.handle_name %></h5>
              <p class="card-text text-muted"><%= "#{user.posts.count} 投稿" %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @users %>
  </div>
  <!-- マイページに戻る -->
  <div class="row justify-content-center mt-4">
    <%= link_to "マイページに戻る", user_path(@user), class: "btn btn-secondary w-auto" %>
  </div>
</div>
